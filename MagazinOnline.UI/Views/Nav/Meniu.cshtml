@model IEnumerable<string>

@Html.ActionLink("Acasa", "List", "Produs", null,
    new { @class="btn btn-block btn-default btn-lg"})

@foreach(var link in Model)
{
    @Html.RouteLink(link,
    new
    {
        Controller = "Produs",
        Action = "List",
        categoria = link,
        pagina = 1
    },
    new
    {
        @class = "btn btn-block btn-default btn-lg"
        +(link==ViewBag.CategoriaSelectata?" btn-primary":"")
    })
}